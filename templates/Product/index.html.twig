{% extends "layout.html.twig" %}

{% block title %}
  <h1 class="display-5 font-weight-bold">Nos produits</h1>
  <p class="lead">Des espadrilles fabriquées à la main par nos maîtres tisserands</p>
{% endblock %}

{% block body %}

<div class="container">
  <div class="row m-md-3">

    {% for product in listProducts %}

    
    <div class="col-sm-4 pt-3 px-3 pt-md-5 px-md-5 mb-3 text-center overflow-hidden product_bloc">
      <div class="my-3 py-3">

        <a href="{{ path('product_view', {'slug': product.slug}) }}">
          <div class="bg-light" height=100>
            <img class="product_img" src="{{ asset('../assets/img/') }}{{ product.img }}">
          </div>
        </a>

        <div class="row">
          <div class="col-sm-8 text-left">
            <p>{{ product.title }}</p>
          </div>
          <div class="col-sm-4">
            <p>{{ product.price }} €</p>
          </div>

        </div>
      </div>
    </div>
    

    {% else %}
      <div class="col-sm-12 p-2 mb-3 text-center overflow-hidden">
            <h2 class="display-5">Pas (encore !) de produits</h2>
          </div>
    {% endfor %}

  </div>

  <hr>

  <ul class="pagination justify-content-center">
    {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
    {% for p in range(1, nbPages) %}
      <li class="page-item {% if p == page %}active{% endif %}">
        <a class="page-link" href="{{ path('product_index', {'page': p}) }}">{{ p }}</a>
      </li>
    {% endfor %}
  </ul>

</div>

{% endblock %}